<script>
    $().ready(function () {
        // validate the comment form when it is submitted
        $("#contactForm").validate({
            messages: {
                txtName: "Vui lòng nhập đầy đủ họ tên",
                txtEmail: "Vui lòng nhập email",
                txtTitle: "Vui lòng nhập tiêu đề",
                txtMessage: "Vui lòng nhập nội dung"
            }
        });
    });
</script>

<div class="page-banner contact-page-bg">
    <div class="container">
        <h1>Thuê Mercedes</h1>
    </div>
</div>
<section class="contain">
    <div class="container">
        <h2>Liên Hệ</h2>
        <div class="row contact-wrap">
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <p class="contact-company-name">Công Ty TNHH Mercedes Benz</p>
                <p>
                    209 Nam Kỳ Khởi Nghĩa, P.7, Q.3, TP. HCM<br />
                    0972.87.82.82 (Mr. Thân)
                </p>
                <ul class="contact-social">
                    <li><a href="#"><img src="../images/footer-social-facebook.png" alt="Facebook" /></a></li>
                    <li><a href="#"><img src="../images/footer-social-instagram.png" alt="Instagram" /></a></li>
                    <li><a href="#"><img src="../images/footer-social-skype.png" alt="Skype" /></a></li>
                </ul>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <form id="contactForm" method="get" action="">
                    <input type="text" name="txtName" id="txtName" placeholder="Họ và tên (*)" class="textbox" required />
                    <input type="email" name="txtEmail" id="txtEmail" placeholder="Email (*)" class="textbox" required />
                    <input type="text" name="txtTitle" id="txtTitle" placeholder="Tiêu đề (*)" class="textbox" required />
                    <textarea rows="5" name="txtMessage" id="txtMessage" placeholder="Nội dung liên hệ (*)" class="textboxMessage" required></textarea>
                    <input type="submit" value="Gửi" class="btn btn-page" />
                </form>
            </div>
        </div>
    </div>
</section>
