@using Mercedes.Core.Domain
@model Model
@{ 
    var categories = ViewBag.Categories as IList<Category>;
}
@using (Html.BeginForm("", "", FormMethod.Post, new { id = "add-model-form" }))
{
    <div id="frm-add-new-model" class="modal fade" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                    <h4 class="modal-title">Model Information</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group">
                            <label class="col-md-3 control-label">Category</label>
                            <div class="col-md-9">
                                @Html.DropDownListFor(m => m.CategoryId, new SelectList(categories, "Id", "Name"), new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Code</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Name</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" class="btn btn-default" id="btn-Close">Close</button>
                    <button type="button" class="btn btn-success" id="btn-save">Save</button>
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript">
    $(function () {
        $("#btn-save").click(function () {
            var frmRegister = $("#add-model-form");
            var formData = frmRegister.serialize();
            $("#btn-save").attr("disabled", "disabled");
            $.ajax({
                cache: false,
                type: "POST",
                url: '@Url.Action("Add")',
                data: formData,
                success: function (data) {
                    if (data) {
                        alert("Insert Successful");
                        resourceTable.ajax.reload();
                        $('#frm-add-new-model').modal('toggle');
                    } else {
                        alert("Insert Fail");
                    }
                    $("#btn-save").removeAttr("disabled");
                },
                error: function (xhr, ajaxOptions, thrownError)
                {
                    alert(xhr.responeText);
                    $("#btn-save").removeAttr("disabled");
                }
            });
        });
    });
</script>