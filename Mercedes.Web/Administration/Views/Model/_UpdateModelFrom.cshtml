@using Mercedes.Core.Domain
@model Model
@{
    Layout = "";
    var categories = ViewBag.Categories as IList<Category>;
}
@using (Html.BeginForm("", "", FormMethod.Post, new { id = "upd-model-form" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h4 class="modal-title">Model Information</h4>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="form-group">
                <label class="col-md-3 control-label">Id</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.Id, new { @class = "form-control", @readonly = "readonly" })
                    @*<input type="text" class="form-control" name="Id" placeholder="Id" readonly="readonly" />*@
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label">Category</label>
                <div class="col-md-9">
                    @*@Html.TextBoxFor(m => m.Manufacturer, new { @class = "form-control"})*@
                    @Html.DropDownListFor(m => m.CategoryId, new SelectList(categories, "Id", "Name"), new { @class = "form-control" })
                    @*<input type="text" class="form-control" name="Id" placeholder="Id" readonly="readonly" />*@
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label">Code</label>
                <div class="col-md-9">
                    @*<input type="text" class="form-control" name="Code" placeholder="Code" />*@
                    @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label">Name</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    @*<input type="text" class="form-control" name="Name" placeholder="Name" />*@
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label">Published</label>
                <div class="col-md-9">
                    @Html.CheckBoxFor(m => m.Published)
                </div>
            </div>
        </div><div class="row">
            <div class="form-group">
                <label class="col-md-3 control-label">Order Display</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.DisplayOrder, new { @class = "form-control" })
                    @*<input type="text" class="form-control" name="Name" placeholder="Name" />*@
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" data-dismiss="modal" class="btn btn-default" id="btn-Close">Close</button>
        <button type="button" class="btn btn-success" onclick="updateModel()" id="btn-update">Update</button>
    </div>
}
<script type="text/javascript">
    function updateModel() {
        var frmRegister = $("#upd-model-form");
        var formData = frmRegister.serialize();
        $("#btn-update").attr("disabled", "disabled");
        $.ajax({
            cache: false,
            type: "POST",
            url: '@Url.Action("Update")',
            data: formData,
            success: function (data) {
                if (data) {
                    alert("Update Successful");
                    resourceTable.ajax.reload();
                    $('#frm-upd-new-model').modal('toggle');
                } else {
                    alert("Update Fail");
                }
                $("#btn-update").removeAttr("disabled");
            },
            error: function (xhr, ajaxOptions, thrownError) {
                alert(xhr.responeText);
                $("#btn-update").removeAttr("disabled");
            }
        });
    }
    $(function () {
        $("#btn-update").click(function () {
           
        });
    });
</script>