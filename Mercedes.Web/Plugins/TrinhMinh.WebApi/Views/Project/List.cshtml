@using Mercedes.Plugins.TrinhMinh.WebApi.Models;
@model ProjectListModel
@{
    ViewBag.Title = "Index";
    //Layout = "~/Administration/Views/Shared/_Layout.cshtml";
    Layout = "";
}
<link href="~/Plugins/TrinhMinh.WebApi/Content/styles.css" rel="stylesheet" type="text/css" />
<link href="~/Administration/assets/plugins/datatables/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Administration/assets/plugins/datatables/jquery.dataTables.min.js"></script>

<link href="~/Administration/assets/plugins/bootstrap-touchspin/bootstrap.touchspin.css" rel="stylesheet" type="text/css" />
<script src="~/Administration/assets/plugins/bootstrap-touchspin/bootstrap.touchspin.js" type="text/javascript"></script>

<div class="box">
    <div class="box-header">
        <h3 class="box-title">All Projects</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <div class="row">
            <div class="col-md-6">
                <div class="btn-group">
                    <a class="btn btn-danger" data-toggle="modal" href="#frm-edit-project" id="btn-add-project"> Add new <i class="fa fa-plus"></i> </a>
                </div>
            </div>
            <div class="col-md-6">
            </div>
        </div>
        <br />
        <table id="tb-setting" class="table table-bordered table-striped">
          
        </table>
    </div>
    <!-- /.box-body -->
</div>
<div id="frm-edit-project" class="modal fade" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
                <div class="modal-content" id="edit-form">
                  
                </div>
            </div>
</div>
<script type="text/javascript">
    var resourceTable = null;
    function deleteResource(url) {
        if (confirm('Delete this record?')) {
            $.ajax({
                url: url,
                type: "post",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    if (data) {
                        alert("Delete Successful");
                        resourceTable.ajax.reload();
                    } else {
                        alert("Delete Fail");
                    }
                },
                error: function (xhr, status, errThrow) {
                    alert(errThrow);
                }
            });
        }
    }

    function getHtmlContent(url) {
        $.ajax({
            url: url,
            type: "GET",
            dataType: "html",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                $("#edit-form").html(data);
            },
            error: function (xhr, status, errThrow) {
                alert(errThrow);
            }
        });
    }

    $(function () {
        $('#frm-edit-project').on('hidden.bs.modal', function (e) {
            //remove all html code:
            $("#edit-form").html('');
        })
        $("#btn-add-project").click(function () {
            var newItemUrl = '@Url.Action("AddProject")';
            getHtmlContent(newItemUrl);
        });

        resourceTable = $('#tb-setting').DataTable(
               {
                   paging: true,
                   ajax:
                   {
                       url: '@Url.Action("ProjectList")',
                       type: "POST",
                       contentType: "application/json; charset=utf-8"
                   },
                   "pageLength": 20,
                   "lengthMenu": [
                       [10, 15, 20, -1],
                       [10, 15, 20, "All"] // change per page values here
                   ],
                   columns: [
                       { title: "Id", data: "Id" },
                       { title: "Name", data: "Name" },
                       {
                           title: "Picture", data: "ImageUrl",
                           mRender: function (data, type, fullObject) {
                               if (data != null) {
                                   return '<img class="thumbnail-image" src="' + data + '"/>';
                               }
                               else {
                                   return '<img class="thumbnail-image" src="@Url.Content("~/images/image_not_available.jpg")"/>';
                               }

                           }
                       },
                       { title: "WebsiteUrl", data: "WebsiteUrl" },
                       { title: "Published", data: "Published" },
                     { title: "Display Order", data: "DisplayOrder" },
                       {
                           //Edit column
                           mRender: function (data, type, fullObject) {
                               var Id = fullObject.Id;
                               var url = '@Url.Action("EditProject")/?Id=' + Id;
                               return '<a id="btn-edit-project" data-toggle="modal" onclick="getHtmlContent(\'' + url + '\')" href="#frm-edit-project" class="edit"> Edit </a>';
                           }
                       },
                       {
                           //Delete column
                           mRender: function (data, type, fullObject) {
                               var Id = fullObject.Id;
                               var url = '@Url.Action("DeleteProject")/?Id=' + Id;
                               return '<a class="delete" onclick="deleteResource(\'' + url + '\')" href=""> Delete </a>';
                           }
                       }
                   ]
               });
    });
</script>





